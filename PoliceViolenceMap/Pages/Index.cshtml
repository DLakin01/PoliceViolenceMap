@page
@model IndexModel
@{
    ViewData["Title"] = "Understanding Police Violence";
}

<div class="text-center">
    <div id="map"></div>

    <br />
    <p>The above interactive map shows a geographical representation of police violence across five years, 
    from 2013 to 2018. This map is intended for use by researchers and students to more fully grasp the scale
    and prevalence of police violence in our country.</p>
</div>

<script>
    function initMap() {
        var map = new google.maps.Map(document.getElementById("map"),
            { zoom: 4, center: new google.maps.LatLng(39.8283, -98.5795) }
        );

        var incidents = @Html.Raw(Json.Serialize(Model.Incidents));
        window.AddMarkersToMap(map, incidents);
    }
</script>
